@model IEnumerable<WebApplication1.Models.Country>
﻿@{
    ViewBag.Title = "Home Page";
}
<div class="row">
    <div class="col-lg-12">
        <h4>Country Codes</h4>
    </div>
    <div class="col-lg-12">
        <div class="table-responsive mb-4 mt-4">
            <table class="table table-hover" style="width: 100%">
                <thead>
                    <tr>
                        <th>Country Name</th>
                        <th>Country Code</th>
                        <th>Country Currency</th>
                        <th>Country Capital</th>
                    </tr>
                </thead>
                <tbody id="tblbdy">
                    @foreach (var da in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => da.name)</td>
                            <td>@Html.DisplayFor(modelItem => da.callingCodes[0])</td>
                            <td>@Html.DisplayFor(modelItem => da.currencies[0].code)</td>
                            <td>@Html.DisplayFor(modelItem => da.capital)</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
